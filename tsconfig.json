{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ESNext",

        "forceConsistentCasingInFileNames": true,
        "allowUnreachableCode": true,

        "esModuleInterop": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "skipLibCheck": false,

        "strict": true,
        "declaration": true,
        "noEmit": false,
        "preserveWatchOutput": true,
        "outDir": "./dist/"
    },
    "include": ["./src/"],
    "exclude": ["**/node_modules", "**/.*/"]
}
